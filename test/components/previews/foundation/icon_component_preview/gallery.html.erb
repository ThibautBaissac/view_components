<div class="p-4">
  <h3 class="text-sm font-medium text-gray-700 mb-4">
    Available Icons (Heroicons)
  </h3>

  <div class="grid grid-cols-5 gap-4">
    <% icons = %w[
        check x-mark user bell trash
        pencil-square magnifying-glass cog-6-tooth envelope bars-3
        chevron-down chevron-up chevron-left chevron-right
        plus minus check-circle exclamation-circle
        exclamation-triangle information-circle
      ] %>

    <% icons.each do |icon_name| %>
      <div
        class="
          flex items-center gap-3 p-2 rounded-lg hover:bg-gray-100
          transition-colors
        "
      >
        <%= render(Foundation::IconComponent.new(name: icon_name, size: :large)) %>
        <span class="text-sm text-gray-700"><%= icon_name %></span>
      </div>
    <% end %>
  </div>
</div>

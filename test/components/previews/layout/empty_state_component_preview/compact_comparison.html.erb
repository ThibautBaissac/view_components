<div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-6">
  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-900 mb-4">Normal (Default)</h3>
    <%= render(Layout::EmptyStateComponent.new(
      icon_name: "document-text",
      title: "No documents",
      description: "Standard spacing with py-12",
      compact: false
    )) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-900 mb-4">Compact</h3>
    <%= render(Layout::EmptyStateComponent.new(
      icon_name: "document-text",
      title: "No documents",
      description: "Compact spacing with py-8",
      compact: true
    )) %>
  </div>

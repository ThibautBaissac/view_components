<div>
  <%= render(Navigation::NavbarComponent.new(sticky: true)) do |navbar| %>
    <% navbar.with_logo do %>
      <a href="#" class="font-bold text-xl text-indigo-600">EventEssentials</a>
    <% end %>

    <% navbar.with_nav_item(text: "Dashboard", url: "#", active: true) %>
    <% navbar.with_nav_item(text: "Events", url: "#") %>
    <% navbar.with_nav_item(text: "Vendors", url: "#") %>

    <% navbar.with_action do %>
      <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700">Sign Out</button>
    <% end %>
  <% end %>

  <div class="p-8 space-y-4">
    <div class="bg-slate-100 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-2">Sticky Navbar Demo</h2>
      <p class="text-slate-600">Scroll down to see the navbar stick to the top of the viewport.</p>
    </div>

    <% 10.times do |i| %>
      <div class="bg-white border border-slate-200 rounded-lg p-6">
        <h3 class="text-lg font-medium mb-2">Content Section <%= i + 1 %></h3>
        <p class="text-slate-600">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
      </div>
    <% end %>
  </div>
</div>

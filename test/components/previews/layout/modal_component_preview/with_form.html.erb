<div class="space-y-4">
  <p class="text-gray-600 mb-4">Modal containing a form (closes on successful submission):</p>

  <%= render Foundation::ButtonComponent.new(
    text: "Edit Profile",
    variant: :primary,
    data: Layout::ModalComponent.trigger_data(modal_id: modal_id)
  ) %>

  <%= render Layout::ModalComponent.new(id: modal_id, title: title) do |modal| %>
    <% modal.with_body do %>
      <form class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <input type="text" value="John Doe" autocomplete="name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" value="john@example.com" autocomplete="email" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Bio</label>
          <textarea rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">Software developer passionate about building great products.</textarea>
        </div>
      </form>
    <% end %>

    <% modal.with_footer do %>
      <%= render Foundation::ButtonComponent.new(
        text: "Cancel",
        variant: :secondary,
        data: { action: "click->components--modal#close" }
      ) %>
      <%= render Foundation::ButtonComponent.new(
        text: "Save Profile",
        variant: :primary,
        type: :submit
      ) %>
    <% end %>
  <% end %>
</div>

<div class="space-y-8 p-6 bg-white">
  <div>
    <p class="text-sm text-gray-600 mb-4">Hairline (1px)</p>
    <%= render Foundation::DividerComponent.new(thickness: :hairline) %>
  </div>

  <div>
    <p class="text-sm text-gray-600 mb-4">Thin (2px)</p>
    <%= render Foundation::DividerComponent.new(thickness: :thin) %>
  </div>

  <div>
    <p class="text-sm text-gray-600 mb-4">Medium (4px)</p>
    <%= render Foundation::DividerComponent.new(thickness: :medium) %>
  </div>

  <div>
    <p class="text-sm text-gray-600 mb-4">Thick (8px)</p>
    <%= render Foundation::DividerComponent.new(thickness: :thick) %>
  </div>
</div>

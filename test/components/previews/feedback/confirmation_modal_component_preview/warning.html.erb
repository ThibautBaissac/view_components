<div class="space-y-4">
  <p class="text-gray-600 mb-4">Warning confirmation for consequential but reversible actions:</p>

  <%= render Foundation::ButtonComponent.new(
    text: "Publish Article",
    variant: :warning,
    data: Feedback::ConfirmationModalComponent.trigger_data(modal_id: modal_id)
  ) %>

  <%= render Feedback::ConfirmationModalComponent.new(
    id: modal_id,
    title: "Publish Article",
    message: "Publishing will make this article visible to all users. You can unpublish it later if needed.",
    confirm_text: "Publish",
    cancel_text: "Not Yet",
    type: :warning
  ) %>
</div>

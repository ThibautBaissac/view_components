<div class="space-y-8 p-6">
  <div>
    <h3 class="text-sm font-medium text-slate-700 mb-4">Default Variant</h3>
    <%= render(Navigation::NavbarComponent.new(variant: :default)) do |navbar| %>
      <% navbar.with_logo do %>
        <a href="#" class="font-bold text-xl text-indigo-600">EventEssentials</a>
      <% end %>
      <% navbar.with_nav_item(text: "Dashboard", url: "#", active: true) %>
      <% navbar.with_nav_item(text: "Events", url: "#") %>
      <% navbar.with_nav_item(text: "Vendors", url: "#") %>
      <% navbar.with_action do %>
        <button class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium">Sign Out</button>
      <% end %>
    <% end %>
  </div>

  <div>

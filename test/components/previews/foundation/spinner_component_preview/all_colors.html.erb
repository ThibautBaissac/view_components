<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Primary</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :primary, label: "Loading", size: :large)) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Secondary</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :secondary, label: "Loading", size: :large)) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Success</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :success, label: "Loading", size: :large)) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Danger</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :danger, label: "Loading", size: :large)) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Warning</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :warning, label: "Loading", size: :large)) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Info</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :info, label: "Loading", size: :large)) %>
  </div>

  <div class="bg-slate-900 rounded-lg p-6">
    <h3 class="text-sm font-medium text-white mb-4">White (on dark)</h3>
    <%= render(Foundation::SpinnerComponent.new(color: :white, label: "Loading", size: :large)) %>
  </div>
</div>

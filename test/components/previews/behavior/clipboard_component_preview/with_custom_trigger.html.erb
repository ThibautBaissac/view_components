<div class="p-4 space-y-4">
  <p class="text-sm text-gray-600">
    Using a custom trigger with Foundation::ButtonComponent:
  </p>

  <%= render Behavior::ClipboardComponent.new(value: "Custom trigger content!") do |c| %>
    <% c.with_trigger do %>
      <%= render Foundation::ButtonComponent.new(
        text: "Copy with Custom Button",
        variant: :success,
        data: { clipboard_target: "button" }
      ) do |btn| %>
        <% btn.with_icon_leading do %>
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
            ></path>
          </svg>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <p class="text-sm text-gray-600 mt-6">Using a custom link trigger:</p>

  <%= render Behavior::ClipboardComponent.new(value: "Link trigger content!") do |c| %>
    <% c.with_trigger do %>
      <%= render Foundation::LinkComponent.new(
        href: "#",
        text: "Copy via Link",
        variant: :link
      ) %>
    <% end %>
  <% end %>
</div>

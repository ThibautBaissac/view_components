<%# filepath: /workspaces/reversed_lab/app/components/form/field/radio_group_component/radio_group_component.html.erb %>
<fieldset class="<%= wrapper_classes %>"
          role="radiogroup"
          id="<%= @id %>"
          aria-describedby="<%= aria_describedby %>"
          <%= flattened_html_attributes %>>
  <% if has_label? %>
    <legend class="<%= legend_classes %>"<%= ' aria-required="true"'.html_safe if @required %>>
      <%= @label %>
      <%= required_indicator_html %>
    </legend>
  <% end %>

  <div class="<%= radios_container_classes %>">
    <% normalized_options.each_with_index do |(label, value), index| %>
      <%= render_radio_option(label, value, index) %>
    <% end %>
  </div>

  <% if has_hint? && !has_error? %>
    <p id="<%= hint_id %>" class="<%= hint_classes %> mt-2"><%= @hint %></p>
  <% end %>

  <% if has_error? %>
    <p id="<%= error_id %>" class="<%= error_classes %> mt-2" role="alert">
      <%= @error %>
    </p>
  <% end %>
</fieldset>

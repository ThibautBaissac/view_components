<div class="space-y-4">
  <p class="text-gray-600 mb-4">Non-dismissible modal that requires user action:</p>

  <%= render Foundation::ButtonComponent.new(
    text: "Open Required Modal",
    variant: :danger,
    data: Layout::ModalComponent.trigger_data(modal_id: modal_id)
  ) %>

  <%= render Layout::ModalComponent.new(
    id: modal_id,
    title: title,
    dismissible: dismissible
  ) do |modal| %>
    <% modal.with_body do %>
      <div class="space-y-4">
        <div class="flex items-start gap-3 p-4 bg-yellow-50 rounded-lg border border-yellow-200">
          <%= render Foundation::IconComponent.new(name: "exclamation-triangle", variant: :solid, color: :warning, size: :medium) %>
          <div>
            <p class="text-yellow-800 font-medium">This modal cannot be dismissed</p>
            <p class="text-yellow-700 text-sm mt-1">
              You must complete the required action or click the button below.
            </p>
          </div>
        </div>
        <p class="text-gray-600">
          ESC key, clicking outside, and the close button are all disabled.
        </p>
      </div>
    <% end %>

    <% modal.with_footer do %>
      <%= render Foundation::ButtonComponent.new(
        text: "I Understand",
        variant: :primary,
        data: { action: "click->components--modal#close" }
      ) %>
    <% end %>
  <% end %>
</div>

  </div>

  <div>
    <p class="text-sm text-gray-400 mb-4">Muted (Gray 100)</p>
    <%= render Foundation::DividerComponent.new(color: :muted, thickness: :thin) %>
  </div>

  <div>
    <p class="text-sm text-blue-600 mb-4">Primary (Blue 600)</p>
    <%= render Foundation::DividerComponent.new(color: :primary, thickness: :thin) %>
  </div>

  <div>
    <p class="text-sm text-gray-600 mb-4">Secondary (Gray 400)</p>
    <%= render Foundation::DividerComponent.new(color: :secondary, thickness: :thin) %>
  </div>

  <div>

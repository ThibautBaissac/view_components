<div class="space-y-6 p-4 max-w-md">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Text Input Sizes</h3>

  <%= render(Form::Field::TextInputComponent.new(
    name: "small_input",
    label: "Small",
    size: :small,
    placeholder: "Small input..."
  )) %>

  <%= render(Form::Field::TextInputComponent.new(
    name: "medium_input",
    label: "Medium (Default)",
    size: :medium,
    placeholder: "Medium input..."
  )) %>

  <%= render(Form::Field::TextInputComponent.new(
    name: "large_input",
    label: "Large",
    size: :large,
    placeholder: "Large input..."
  )) %>
</div>

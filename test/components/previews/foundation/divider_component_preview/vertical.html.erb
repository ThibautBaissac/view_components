      <p class="text-sm text-gray-600">Section 1</p>
    </div>

    <%= render Foundation::DividerComponent.new(
      orientation: :vertical,
      thickness: :hairline,
      spacing: :medium
    ) %>

    <div class="flex-1 text-center">
      <p class="text-sm text-gray-600">Section 2</p>
    </div>


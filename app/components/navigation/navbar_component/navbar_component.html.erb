<nav <%= tag.attributes(attributes_for_rendering) %>>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <% if logo? %>
          <%= logo %>
        <% end %>
      </div>

      <div class="hidden md:flex md:items-center md:space-x-1">
        <% nav_items.each do |nav_item| %>
          <%= nav_item %>
        <% end %>
      </div>

      <div class="hidden md:flex md:items-center md:space-x-2">
        <% actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>

      <div class="flex md:hidden">
        <button type="button" data-action="click->components--navbar#toggleMenu" data-components--navbar-target="menuButton" class="inline-flex items-center justify-center p-2 rounded-lg text-slate-700 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-amber-500" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only"><%= mobile_menu_label %></span>
          <svg data-components--navbar-target="menuIcon" class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <svg data-components--navbar-target="closeIcon" class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div data-components--navbar-target="menu" class="hidden md:hidden" id="mobile-menu" aria-hidden="true">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-slate-200">
      <% nav_items.each do |nav_item| %>
        <div class="block">
          <%= nav_item %>
        </div>
      <% end %>
    </div>

    <% if actions? %>
      <div class="pt-4 pb-3 border-t border-slate-200">
        <div class="px-2 space-y-1">
          <% actions.each do |action| %>
            <div class="block">
              <%= action %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</nav>

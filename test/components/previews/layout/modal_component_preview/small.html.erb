<div class="space-y-4">
  <p class="text-gray-600 mb-4">Small modal for simple content:</p>

  <%= render Foundation::ButtonComponent.new(
    text: "Open Small Modal",
    variant: :primary,
    data: Layout::ModalComponent.trigger_attributes(modal_id: modal_id)
  ) %>

  <%= render Layout::ModalComponent.new(
    id: modal_id,
    title: title,
    size: size
  ) do %>
    <p class="text-gray-600">This is a small modal, perfect for simple messages or confirmations.</p>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
  <div class="bg-white rounded-lg border border-slate-200 p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Current Color (Default)</h3>
    <%= render(Display::StatCardComponent.new(
      icon_name: "star",
      icon_color: :current,
      value: "4.8",
      label: "Average Rating",
      value_color: :warning
    )) %>
  </div>

  <div class="bg-white rounded-lg border border-slate-200 p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Primary Icon</h3>
    <%= render(Display::StatCardComponent.new(
      icon_name: "heart",
      icon_color: :primary,
      value: "1,234",
      label: "Favorites",
      value_color: :primary
    )) %>
  </div>

  <div class="bg-white rounded-lg border border-slate-200 p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Success Icon</h3>
    <%= render(Display::StatCardComponent.new(
      icon_name: "check-badge",
      icon_color: :success,
      value: "98%",
      label: "Completion Rate",
      value_color: :success
    )) %>
  </div>
</div>

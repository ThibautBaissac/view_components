<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow">
  <h2 class="text-lg font-semibold text-gray-900 mb-6">Account Setup</h2>

  <form class="space-y-8">
    <%= render(Form::Field::RadioGroupComponent.new(
      name: "account_type",
      label: "Account Type",
      options: [
        [ "Personal - For individual use", "personal" ],
        [ "Business - For teams and companies", "business" ],
        [ "Enterprise - Custom solutions", "enterprise" ]
      ],
      hint: "You can upgrade or change your account type later.",
      required: true,
      value: "personal"
    )) %>

    <%= render(Form::Field::RadioGroupComponent.new(
      name: "billing_cycle",
      label: "Billing Cycle",
      options: [
        [ "Monthly - $29/month", "monthly" ],
        [ "Annual - $278/year", "annual" ]
      ],
      value: "annual",
      required: true
    )) do |group| %>
      <div class="mt-2 p-3 bg-green-50 border border-green-200 rounded-md">
        <p class="text-sm text-green-800">
          ğŸ’° <strong>Save 20%</strong> with annual billing
        </p>
      </div>
    <% end %>

    <%= render(Form::Field::RadioGroupComponent.new(
      name: "payment_method",
      label: "Payment Method",
      options: [
        [ "Credit Card", "card" ],
        [ "PayPal", "paypal" ],
        [ "Bank Transfer (Enterprise only)", "bank" ]
      ],
      hint: "Bank transfer is only available for Enterprise plans.",
      required: true,
      value: "card"
    )) %>

    <%= render(Form::Field::RadioGroupComponent.new(
      name: "newsletter",
      label: "Newsletter Subscription",
      options: [
        [ "Yes, send me updates and tips", "yes" ],
        [ "No, thanks", "no" ]
      ],
      hint: "You can unsubscribe at any time.",
      layout: :inline
    )) %>

    <div class="pt-6 border-t border-gray-200">
      <button type="submit" class="w-full px-4 py-3 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Complete Setup
      </button>
    </div>
  </form>
</div>

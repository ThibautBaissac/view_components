<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Payment Settings</h2>

  <form class="space-y-6">
    <fieldset class="space-y-3">
      <legend class="text-sm font-medium text-gray-700 mb-2">Billing Cycle</legend>

      <%= render(Form::Field::RadioComponent.new(
        name: "billing_cycle",
        value: "monthly",
        label: "Monthly - $29/month",
        required: true
      )) %>

      <%= render(Form::Field::RadioComponent.new(
        name: "billing_cycle",
        value: "annual",
        checked: true,
        required: true
      )) do |radio| %>
        <% radio.with_label_content do %>
          Annual - <span class="text-green-600 font-medium">$278/year</span>
          <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Save 20%</span>
        <% end %>
      <% end %>
    </fieldset>

    <fieldset class="space-y-3">
      <legend class="text-sm font-medium text-gray-700 mb-2">Payment Method</legend>

      <%= render(Form::Field::RadioComponent.new(
        name: "payment_method",
        value: "card",
        label: "Credit Card",
        hint: "Visa, Mastercard, American Express",
        checked: true
      )) %>

      <%= render(Form::Field::RadioComponent.new(
        name: "payment_method",
        value: "paypal",
        label: "PayPal",
        hint: "You'll be redirected to PayPal to complete payment"
      )) %>

      <%= render(Form::Field::RadioComponent.new(
        name: "payment_method",
        value: "bank",
        label: "Bank Transfer",
        hint: "Available for annual plans only",
        disabled: true
      )) %>
    </fieldset>

    <div class="pt-4 border-t">
      <button type="submit" class="w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Continue to Payment
      </button>
    </div>
  </form>
</div>

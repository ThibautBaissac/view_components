<div class="max-w-6xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-6">Project Assets Upload</h2>

    <form class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <%= render Form::Field::FileUploadComponent.new(
          name: "project[logo]",
          label: "Project Logo",
          accept: "image/*",
          max_size: 2 * 1024 * 1024,
          hint: "PNG or SVG, max 2 MB",
          size: :small
        ) %>

        <%= render Form::Field::FileUploadComponent.new(
          name: "project[banner]",
          label: "Banner Image",
          accept: "image/*",
          max_size: 5 * 1024 * 1024,
          hint: "JPG or PNG, max 5 MB",
          size: :small
        ) %>

        <%= render Form::Field::FileUploadComponent.new(
          name: "project[favicon]",
          label: "Favicon",
          accept: ".ico,.png",
          max_size: 100 * 1024,
          hint: "ICO or PNG, max 100 KB",
          size: :small
        ) %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <%= render Form::Field::FileUploadComponent.new(
          name: "project[screenshots][]",
          label: "Screenshots",
          multiple: true,
          max_files: 8,
          accept: "image/*",
          hint: "Up to 8 images"
        ) %>

        <%= render Form::Field::FileUploadComponent.new(
          name: "project[videos][]",
          label: "Demo Videos",
          multiple: true,
          max_files: 3,
          accept: "video/*",
          max_size: 50 * 1024 * 1024,
          hint: "Up to 3 videos, 50 MB each"
        ) %>
      </div>

      <%= render Form::Field::FileUploadComponent.new(
        name: "project[documents][]",
        label: "Documentation Files",
        multiple: true,
        max_files: 10,
        accept: ".pdf,.doc,.docx,.md,.txt",
        hint: "Project documentation, specifications, or related files"
      ) %>

      <div class="flex justify-end gap-3 pt-4 border-t">
        <%= render Foundation::ButtonComponent.new(
          text: "Cancel",
          variant: :secondary
        ) %>
        <%= render Foundation::ButtonComponent.new(
          text: "Upload Assets",
          variant: :primary
        ) %>
      </div>
    </form>
  </div>
</div>

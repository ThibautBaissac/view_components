<div class="flex items-center gap-8 p-4">
  <div class="flex flex-col items-center gap-2">
    <%= render(Foundation::IconComponent.new(name: "bell", variant: :outline, size: :large)) %>
    <span class="text-xs text-gray-500">Outline (24x24)</span>
  </div>

  <div class="flex flex-col items-center gap-2">
    <%= render(Foundation::IconComponent.new(name: "bell", variant: :solid, size: :large)) %>
    <span class="text-xs text-gray-500">Solid (24x24)</span>
  </div>

  <div class="flex flex-col items-center gap-2">
    <%= render(Foundation::IconComponent.new(name: "bell", variant: :mini, size: :large)) %>
    <span class="text-xs text-gray-500">Mini (20x20)</span>
  </div>

  <div class="flex flex-col items-center gap-2">
    <%= render(Foundation::IconComponent.new(name: "bell", variant: :micro, size: :large)) %>
    <span class="text-xs text-gray-500">Micro (16x16)</span>
  </div>
</div>

<div class="mt-6 p-4 bg-gray-50 rounded-lg">
  <h3 class="text-sm font-medium text-gray-700 mb-3">More Examples</h3>

  <div class="grid grid-cols-6 gap-4">
    <% %w[check x-mark user trash pencil-square bell].each do |icon_name| %>
      <div class="flex flex-col items-center gap-1">
        <div class="flex gap-2">
          <%= render(Foundation::IconComponent.new(name: icon_name, variant: :outline)) %>
          <%= render(Foundation::IconComponent.new(name: icon_name, variant: :solid)) %>
          <%= render(Foundation::IconComponent.new(name: icon_name, variant: :mini)) %>
          <%= render(Foundation::IconComponent.new(name: icon_name, variant: :micro)) %>
        </div>

        <span class="text-xs text-gray-500"><%= icon_name %></span>
      </div>
    <% end %>
  </div>
</div>

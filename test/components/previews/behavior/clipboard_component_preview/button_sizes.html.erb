<div class="flex flex-wrap items-end gap-4 p-4">
  <% sizes.each do |size| %>
    <div class="flex flex-col items-center gap-2">
      <span class="text-sm text-gray-500"><%= size.to_s.titleize %></span>

      <%= render Behavior::ClipboardComponent.new(
        value: "Copy me!",
        text: "Copy",
        button_size: size
      ) %>
    </div>
  <% end %>
</div>

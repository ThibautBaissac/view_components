<div class="space-y-4">
  <p class="text-gray-600 mb-4">Large modal for complex content:</p>

  <%= render Foundation::ButtonComponent.new(
    text: "Open Large Modal",
    variant: :primary,
    data: Layout::ModalComponent.trigger_data(modal_id: modal_id)
  ) %>

  <%= render Layout::ModalComponent.new(
    id: modal_id,
    title: title,
    size: size
  ) do %>
    <div class="prose">
      <p class="text-gray-600">This is a large modal, suitable for complex content, forms, or detailed information.</p>
      <ul class="mt-4 text-gray-600 list-disc list-inside space-y-2">
        <li>More space for content</li>
        <li>Better for forms with multiple fields</li>
        <li>Ideal for displaying tables or lists</li>
        <li>Good for image previews</li>
      </ul>
    </div>
  <% end %>
</div>

<div class="p-4">
  <h3 class="text-sm font-medium text-gray-700 mb-4">Status Indicators</h3>

  <div class="flex flex-wrap gap-6">
    <div class="flex items-center gap-2">
      <%= render(Foundation::IconComponent.new(name: "check-circle", variant: :solid, color: :success)) %>
      <span class="text-gray-700">Active</span>
    </div>

    <div class="flex items-center gap-2">
      <%= render(Foundation::IconComponent.new(name: "exclamation-circle", variant: :solid, color: :warning)) %>
      <span class="text-gray-700">Pending</span>
    </div>

    <div class="flex items-center gap-2">
      <%= render(Foundation::IconComponent.new(name: "x-mark", variant: :solid, color: :danger)) %>
      <span class="text-gray-700">Failed</span>
    </div>

    <div class="flex items-center gap-2">
      <%= render(Foundation::IconComponent.new(name: "information-circle", variant: :solid, color: :info)) %>
      <span class="text-gray-700">Information</span>
    </div>
  </div>

  <h3 class="text-sm font-medium text-gray-700 mt-6 mb-4">Alert Banners</h3>

  <div class="flex flex-col gap-3 max-w-md">
    <div
      class="
        flex items-start gap-3 p-4 bg-green-50 border border-green-200
        rounded-lg
      "
    >
      <%= render(Foundation::IconComponent.new(name: "check-circle", variant: :solid, color: :success, size: :large)) %>

      <div>
        <h4 class="font-medium text-green-800">Success</h4>

        <p class="text-sm text-green-700">
          Your changes have been saved successfully.
        </p>
      </div>
    </div>

    <div
      class="
        flex items-start gap-3 p-4 bg-yellow-50 border border-yellow-200
        rounded-lg
      "
    >
      <%= render(Foundation::IconComponent.new(name: "exclamation-triangle", variant: :solid, color: :warning, size: :large)) %>

      <div>
        <h4 class="font-medium text-yellow-800">Warning</h4>

        <p class="text-sm text-yellow-700">
          Please review your input before continuing.
        </p>
      </div>
    </div>

    <div class="flex items-start gap-3 p-4 bg-red-50 border border-red-200 rounded-lg">
      <%= render(Foundation::IconComponent.new(name: "exclamation-circle", variant: :solid, color: :danger, size: :large)) %>

      <div>
        <h4 class="font-medium text-red-800">Error</h4>

        <p class="text-sm text-red-700">
          Something went wrong. Please try again.
        </p>
      </div>
    </div>

    <div
      class="
        flex items-start gap-3 p-4 bg-blue-50 border border-blue-200
        rounded-lg
      "
    >
      <%= render(Foundation::IconComponent.new(name: "information-circle", variant: :solid, color: :info, size: :large)) %>

      <div>
        <h4 class="font-medium text-blue-800">Information</h4>

        <p class="text-sm text-blue-700">
          A new version is available for download.
        </p>
      </div>
    </div>
  </div>
</div>

<div class="space-y-4">
  <p class="text-gray-600 mb-4">Confirmation with custom icon:</p>

  <%= render Foundation::ButtonComponent.new(
    text: "Remove Member",
    variant: :danger,
    data: Feedback::ConfirmationModalComponent.trigger_data(modal_id: modal_id)
  ) %>

  <%= render Feedback::ConfirmationModalComponent.new(
    id: modal_id,
    title: "Remove Team Member",
    message: "This user will be removed from the team and lose access to all team resources.",
    confirm_text: "Remove",
    cancel_text: "Cancel",
    type: :danger
  ) do |modal| %>
    <% modal.with_icon(name: "user-minus", variant: :outline, color: :danger, size: :large) %>
  <% end %>
</div>

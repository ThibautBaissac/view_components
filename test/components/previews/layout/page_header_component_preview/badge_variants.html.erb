<div class="space-y-8 p-6">
  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Success Badge</h3>
    <%= render(Layout::PageHeaderComponent.new(title: "Confirmed Event")) do |header| %>
      <% header.with_badge do %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Confirmed</span>
      <% end %>
    <% end %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Warning Badge</h3>
    <%= render(Layout::PageHeaderComponent.new(title: "Pending Event")) do |header| %>
      <% header.with_badge do %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Pending</span>
      <% end %>
    <% end %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Danger Badge</h3>
    <%= render(Layout::PageHeaderComponent.new(title: "Cancelled Event")) do |header| %>
      <% header.with_badge do %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Cancelled</span>
      <% end %>
    <% end %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Info Badge</h3>
    <%= render(Layout::PageHeaderComponent.new(title: "Draft Event")) do |header| %>
      <% header.with_badge do %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Draft</span>
      <% end %>
    <% end %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-700 mb-4">Purple Badge</h3>
    <%= render(Layout::PageHeaderComponent.new(title: "Premium Event")) do |header| %>
      <% header.with_badge do %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">Premium</span>
      <% end %>
    <% end %>
  </div>
</div>

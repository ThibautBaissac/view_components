<div class="space-y-4">
  <% comments.each do |comment| %>
    <div class="flex gap-3 p-4 bg-white rounded-lg border border-gray-200">
      <div class="flex-shrink-0 w-10 h-10 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center font-semibold">
        <%= comment[:avatar] %>
      </div>
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1">
          <span class="font-medium text-gray-900"><%= comment[:author] %></span>
          <span class="text-gray-400">â€¢</span>
          <%= render Display::TimeagoComponent.new(
            datetime: comment[:datetime],
            class: "text-sm text-gray-500"
          ) %>
        </div>
        <p class="text-gray-700"><%= comment[:content] %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-6">
  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-900 mb-4">Large Icon</h3>
    <%= render(Layout::EmptyStateComponent.new(
      icon_name: "calendar",
      icon_size: :large,
      title: "Large",
      description: "Large icon size"
    )) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-900 mb-4">XL Icon (Default)</h3>
    <%= render(Layout::EmptyStateComponent.new(
      icon_name: "calendar",
      icon_size: :xl,
      title: "Extra Large",
      description: "XL icon size"
    )) %>
  </div>

  <div class="border border-slate-200 rounded-lg p-6">
    <h3 class="text-sm font-medium text-slate-900 mb-4">XXL Icon</h3>
    <%= render(Layout::EmptyStateComponent.new(
      icon_name: "calendar",
      icon_size: :xxl,
      title: "2X Large",
      description: "XXL icon size"
    )) %>
  </div>
</div>
